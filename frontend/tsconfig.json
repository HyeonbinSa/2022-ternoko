{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
